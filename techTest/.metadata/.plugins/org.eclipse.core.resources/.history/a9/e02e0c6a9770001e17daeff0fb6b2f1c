# Crear la base de datos si no existe y auto-reconectar
spring.datasource.url=jdbc:postgresql://localhost:5432/postgres?currentSchema=techTest

spring.datasource.username=postgres
spring.datasource.password=Blap1504

spring.datasource.hikari.connectionTimeout=20000
spring.datasource.hikari.maximumPoolSize=5

# Configuración de JPA
spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQL95Dialect
spring.jpa.properties.hibernate.jdbc.lob.non_contextual_creation=true
spring.jpa.show-sql=true

# Configuración de la ubicación de las vistas (si es necesario)
spring.mvc.view.prefix=/WEB-INF/Views/









